@model IEnumerable<Model.EntityModels.MilkMan>;
  
<h1 class="bg-info text-white">All Users</h1>
<a asp-action="Create" class="btn btn-secondary">Create a User</a>
  
<table class="table table-sm table-bordered">
    <tr>
        
        <th>Name</th>
        <th>Email</th>
        <th>Age</th>
        <th>Address</th>
        <th style="text-align:center">Update</th>
        <th style="text-align:center">Delete</th>
    </tr>
    @foreach (var milkMen  in Model)
    {
      <tr>
        
        <td>@milkMen.FirstName @milkMen.LastName</td>
        <td>@milkMen.Email</td>
        <td>@milkMen.Age</td>
        <td>@milkMen.Address</td>
        <td>
                <a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@milkMen.Id">
                    Update
                </a>
            </td>
         <td>
                <form asp-action="Delete" asp-route-id="@milkMen.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>

      </tr>
    }
</table>
